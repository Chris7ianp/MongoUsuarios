@model MongoUsuarios.Dtos.UsuarioDto

<!--Views\Usuario\Create.cshtml-->


<div class="container mt-4">
    <h2>Cadastrar Usuário</h2>
    <form method="post">
        <div class="mb-3">
            <label>Nome</label>
            <input asp-for="Nome" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Email</label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Idade</label>
            <input asp-for="Idade" class="form-control" type="number" />
        </div>
        <button type="submit" class="btn btn-success">Salvar</button>
    </form>
</div>
